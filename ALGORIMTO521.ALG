algoritmo "algoritmo52"
// 
var
numero,soma: real


inicio
escreva("Digite um número: ")
leia(numero)
soma<-soma+numero

se numero=0 entao
    escreval ("programa encerrado")
senao
    enquanto (numero<>0) faca
    escreva("Digite um número: ")
    leia(numero)
    soma<-soma+numero   
    fimenquanto

    escreva(soma)
fimse



fimalgoritmo