algoritmo "algoritmo31"
//Crie um programa que verifique se um número digitado é positivo
var
numero:real

inicio
escreva("escreva um número: ")
leia(numero)

    se numero=0 entao {
        escreva("numero nulo")
    senao se numero>0 entao
       escreva("número positivo")
    senao
        escreva("numero negativo")   
    fimSe 
    fimSe 
}  
fimalgoritmo